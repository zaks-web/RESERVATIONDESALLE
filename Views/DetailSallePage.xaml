<Page x:Class="GantsPlace.Views.DetailSallePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource SecondaryDarkBrush}" Title="DÃ©tail Salle">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <Button Content="â† Retour" Style="{StaticResource NavButtonStyle}"
                    HorizontalAlignment="Left" Margin="0,0,0,20" Click="BtnRetour_Click"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- Gauche : photos + infos -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    <Border x:Name="MainPhoto" Height="300" CornerRadius="16" ClipToBounds="True"
                            Margin="0,0,0,10" Background="#888888">
                        <Border CornerRadius="16">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Transparent" Offset="0.6"/>
                                    <GradientStop Color="#99000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                    

                    <TextBlock x:Name="TxtNomSalle" FontFamily="{StaticResource AppFont}"
                               FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                    <!-- Badges type + capacitÃ© -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="20" Padding="12,5" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtType" FontFamily="{StaticResource AppFont}" FontSize="13" Foreground="White"/>
                        </Border>
                        <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="20" Padding="12,5">
                            <TextBlock FontFamily="{StaticResource AppFont}" FontSize="13" Foreground="White">
                                <Run x:Name="TxtCapacite"/><Run Text=" personnes max."/>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Description -->
                    <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Description" FontFamily="{StaticResource AppFont}"
                                       FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                            <TextBlock x:Name="TxtDescription" FontFamily="{StaticResource AppFont}"
                                       FontSize="14" Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="22"/>
                        </StackPanel>
                    </Border>

                    <!-- Ã‰quipements inclus -->
                    <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Ã‰quipements inclus" FontFamily="{StaticResource AppFont}"
                                       FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                            <WrapPanel x:Name="EquipementsPanel"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Droite : formulaire -->
                <Border Grid.Column="1" Background="{StaticResource PrimaryDarkBrush}"
                        CornerRadius="16" Padding="22" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="RÃ©server cette salle" FontFamily="{StaticResource AppFont}"
                                   FontSize="17" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>
                        <Rectangle Height="1" Fill="#444444" Margin="0,0,0,16"/>

                        <!-- Non connectÃ© -->
                        <Border x:Name="PanelNonConnecte" Background="#333333" CornerRadius="10"
                                Padding="14,12" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="ðŸ”’ Connectez-vous pour rÃ©server"
                                           FontFamily="{StaticResource AppFont}" FontSize="13"
                                           Foreground="#FFCC55" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                <Button Content="Se connecter" Style="{StaticResource PrimaryButtonStyle}"
                                        HorizontalAlignment="Center" Padding="20,10" Click="BtnGoLogin_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Formulaire connectÃ© -->
                        <StackPanel x:Name="PanelFormulaire">

                            <!-- Date -->
                            <TextBlock Text="ðŸ“… Date" FontFamily="{StaticResource AppFont}"
                                       FontSize="13" Foreground="#AAAAAA" Margin="0,0,0,6"/>
                            <Border Background="#3A3A3A" CornerRadius="8" Padding="12,8" Margin="0,0,0,14">
                                <DatePicker x:Name="DpDate" Background="Transparent" Foreground="White"
                                            BorderThickness="0" FontFamily="{StaticResource AppFont}" FontSize="14"
                                            SelectedDateChanged="Champ_Changed">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="CaretBrush" Value="White"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>

                            <!-- Heures -->
                            <Grid Margin="0,0,0,14">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/><ColumnDefinition Width="10"/><ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ðŸ• DÃ©but" FontFamily="{StaticResource AppFont}"
                                               FontSize="13" Foreground="#AAAAAA" Margin="0,0,0,6"/>
                                    <Border Background="#3A3A3A" CornerRadius="8" Padding="8,6">
                                        <ComboBox x:Name="CmbHeureDebut" Background="#3A3A3A"
                                                  Foreground="Black" BorderThickness="0"
                                                  FontFamily="{StaticResource AppFont}" FontSize="13"
                                                  SelectionChanged="Champ_Changed"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="ðŸ• Fin" FontFamily="{StaticResource AppFont}"
                                               FontSize="13" Foreground="#AAAAAA" Margin="0,0,0,6"/>
                                    <Border Background="#3A3A3A" CornerRadius="8" Padding="8,6">
                                        <ComboBox x:Name="CmbHeureFin" Background="#3A3A3A"
                                                  Foreground="Black" BorderThickness="0"
                                                  FontFamily="{StaticResource AppFont}" FontSize="13"
                                                  SelectionChanged="Champ_Changed"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Message retour -->
                            <TextBlock x:Name="TxtMessage" FontFamily="{StaticResource AppFont}"
                                       FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12"
                                       Visibility="Collapsed"/>

                            <Button x:Name="BtnReserver"
                                    Content="âœ… RÃ©server maintenant"
                                    Style="{StaticResource ReservationButtonStyle}"
                                    HorizontalAlignment="Stretch" Padding="14,13"
                                    Click="BtnReserver_Click"/>

                            <!-- Success indicator (hidden by default) -->
                            <Border x:Name="SuccessIndicator" Background="#48C774" CornerRadius="10" 
                                    Padding="15,12" Margin="0,10,0,0" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="âœ“" FontSize="16" Foreground="White" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="RÃ©servation confirmÃ©e !" FontFamily="{StaticResource AppFont}" 
                                               FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
