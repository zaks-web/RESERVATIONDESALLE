<Page x:Class="GantsPlace.Views.InscriptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource SecondaryDarkBrush}"
      Title="Inscription">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!-- Left decorative panel with G and P -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#111111" Offset="0"/>
                    <GradientStop Color="#2D2D2D" Offset="0.5"/>
                    <GradientStop Color="#444444" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="G" FontFamily="Georgia" FontSize="200" FontWeight="Bold"
                               Foreground="#555555" Opacity="0.6" HorizontalAlignment="Center"
                               Margin="0,0,0,-60"/>
                    <TextBlock Text="P" FontFamily="Georgia" FontSize="140" FontWeight="Bold"
                               Foreground="#666666" Opacity="0.5" HorizontalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="GANDS PLACE" FontFamily="{StaticResource AppFont}" FontSize="18" FontWeight="Bold"
                           Foreground="#888888" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           Margin="0,0,0,30"/>
            </Grid>
        </Border>
        <!-- Right: Sign Up form -->
        <Border Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" Margin="60,0">
                <Border Width="80" Height="80" CornerRadius="40" Background="#CCCCCC" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="ðŸ‘¤" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="SIGN UP" FontFamily="{StaticResource AppFont}" FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryDarkBrush}" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock x:Name="TxtErreur" Foreground="Red" FontSize="12" FontFamily="{StaticResource AppFont}"
                           HorizontalAlignment="Center" Margin="0,0,0,8" Visibility="Collapsed"/>
                <Grid Margin="0,0,0,16">
                    <TextBlock Text="ðŸ‘¤" FontSize="14" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtNom" Style="{StaticResource InputFieldStyle}"/>
                    <TextBlock x:Name="PhNom" Text="Full Name" Foreground="Gray" FontSize="14"
                               IsHitTestVisible="False" VerticalAlignment="Bottom" Margin="30,0,0,10"/>
                </Grid>
                <Grid Margin="0,0,0,16">
                    <TextBlock Text="@" FontSize="16" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtEmail" Style="{StaticResource InputFieldStyle}"/>
                    <TextBlock x:Name="PhEmail" Text="Email" Foreground="Gray" FontSize="14"
                               IsHitTestVisible="False" VerticalAlignment="Bottom" Margin="30,0,0,10"/>
                </Grid>
                <Grid Margin="0,0,0,16">
                    <TextBlock Text="ðŸ”’" FontSize="14" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="TxtPassword" Style="{StaticResource PasswordFieldStyle}"/>
                    <TextBlock x:Name="PhPwd" Text="Password" Foreground="Gray" FontSize="14"
                               IsHitTestVisible="False" VerticalAlignment="Bottom" Margin="30,0,0,10"/>
                </Grid>
                <Grid Margin="0,0,0,28">
                    <TextBlock Text="ðŸ”’" FontSize="14" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="TxtConfirm" Style="{StaticResource PasswordFieldStyle}"/>
                    <TextBlock x:Name="PhConfirm" Text="Confirm Password" Foreground="Gray" FontSize="14"
                               IsHitTestVisible="False" VerticalAlignment="Bottom" Margin="30,0,0,10"/>
                </Grid>
                <Button Content="SIGN UP" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Center" Padding="40,12" Click="BtnSignUp_Click"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <TextBlock Text="DÃ©jÃ  un compte ?" FontFamily="{StaticResource AppFont}" FontSize="13" Foreground="#666666" Margin="0,0,4,0"/>
                    <TextBlock Text="Se connecter" FontFamily="{StaticResource AppFont}" FontSize="13" Foreground="{StaticResource PrimaryDarkBrush}"
                               Cursor="Hand" TextDecorations="Underline" MouseLeftButtonDown="GoToLogin"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Tab selectors -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border Background="#DDDDDD" Padding="20,12,20,12" Cursor="Hand" MouseLeftButtonDown="GoToLogin">
                <TextBlock Text="LOGIN" FontFamily="{StaticResource AppFont}" FontSize="14" Foreground="#666666"/>
            </Border>
            <Border Background="White" CornerRadius="0,0,20,0" Padding="20,12,20,12">
                <TextBlock Text="SIGN UP" FontFamily="{StaticResource AppFont}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryDarkBrush}"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
